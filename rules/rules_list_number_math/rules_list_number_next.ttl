    VAL:right_side [
        VAL:priority "3" ;
        VAL:child [
            VAL:operation VAL:cons ;
            VAL:variable_x VAR:_car_before ;
            VAL:variable_y VAR:_cdr_sy ;
            VAL:variable_z VAR:_u ] ] ;
    VAL:right_side [
        VAL:priority "4" ;
        VAL:child [
            VAL:operation VAL:carry_down ;
            VAL:variable_x VAR:_u ;
            VAL:variable_y VAR:_x ] ] .

