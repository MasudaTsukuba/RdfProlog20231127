@prefix PR: <http://example.org/> .
@prefix VAR: <http://variable.org/> .

##################################################################
# facts
PR:fact_human_socrates
    PR:type PR:fact ;
    PR:operation PR:human ;
    PR:variable_x PR:socrates .

##################################################################
# rules
PR:rule_human_mortal
    PR:type PR:rule ;
    PR:left_side [
        PR:operation PR:mortal ;
        PR:variable_x VAR:_x ] ;
    PR:right_side [
        PR:child [
            PR:operation PR:human ;
            PR:variable_x VAR:_x ] ] .

##################################################################
# controls

PR:control_human_mortal
    PR:type PR:control ;
    PR:left_side [
        PR:operation PR:mortal ;
        PR:variable_x VAR:_x ] ;
    PR:right_side [
        PR:priority "1" ;
        PR:child [
            PR:operation PR:human ;
            PR:variable_x VAR:_x ] ] .

##################################################################
# applications

PR:application_mortal_x
    PR:type PR:application ;
    PR:program PR:false ;
    PR:pattern [
        PR:operation PR:mortal ;
        PR:variable_x VAR:_x ] ;
    PR:use [
        PR:control PR:control_human_mortal ;
        PR:priority "1" ] ;
    PR:priority "1" .

