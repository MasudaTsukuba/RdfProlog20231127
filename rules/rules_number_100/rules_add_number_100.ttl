    VAL:left_side [
        VAL:operation VAL:add_number ;
        VAL:variable_x VAR:_x ;
        VAL:variable_y VAL:1 ;
        VAL:variable_z VAR:_z ] ;
    VAL:right_side [
        VAL:child [
            VAL:operation VAL:next_number ;
            VAL:variable_x VAR:_x ;
            VAL:variable_y VAR:_z ] ] .

